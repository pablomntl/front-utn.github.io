<div class="container " style="margin:120px auto">

    <div class="row ">
        <div class="col">
            <p class="text-right">
                <span>Hola {{usuario}} !</span>

                <a href="/admin/login/logout" class="btn btn-sm btn-danger"> <i class="fas fa-sign-out-alt"></i> Cerrar
                    sesi√≥n</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col " style="margin-top:-9px;">
            <h4>Listado de novedades</h4>
        </div>
        <div class="col-2 text-right ">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>

    <div class="row" style="margin-top: 5px;">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{ id }}</th>
                        <td>{{ titulo }}</td>
                        <td> {{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id}}" title="editar" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="eliminar" class="btn btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>


</div>



</div>