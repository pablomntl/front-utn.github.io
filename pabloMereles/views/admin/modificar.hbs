<div class="container" style="margin-top: 100px;">

<div class="row">
    <div class="col-12 col-sm-12 col-md-12 ">
        <h4>Agregar Modificación</h4>
        <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">

        <div class="form-group mt-3">
            <input type="text" class="form-control" placeholder="Título" name="titulo" value="{{novedad.titulo}}" >
        </div>

        <div class="form-group mt-3">
            <textarea type="text" class="form-control" placeholder="cuerpo" name="subtitulo" >{{novedad.subtitulo}}</textarea>
        </div>

        <div class="form-group mt-3">
            <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo" >{{novedad.cuerpo}}</textarea>
        </div>
         
         <div class="form-group mt-3">
             <p>
                 <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
             </p>

             <p>
                 <label>
                     <input type="checkbox" name="img_delete"
                     id="img_delete" value="1">
                     Eliminar imagen actual?
                     <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                 </label>
             </p>
         </div>

        </form>
        <input class="btn btn-primary" type="submit" value="Guardar">
        {{!-- <button type="submit" class="btn btn-primary">Guardar</button> --}}
    </div>
     {{#if error}}
        <h5>{{ message }}</h5>
        {{/if}}
</div>
    
</div>