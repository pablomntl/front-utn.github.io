<div class="container-fluid">
    <div id="home" class="row align-items-center portada">
        <div class="col-lg-4 offset-lg-2">
            <p class="parrafo_titulo">Bienvenidos</p>
            <h1 class="titulo_principal">Pablo Mereles</h1>
            <p class="parrafo_titulo">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Eaque, quam
                est dolore maiores in nam eum blanditiis minus possimus modi, odio
                voluptas commodi cum obcaecati necessitatibus accusantium saepe ipsam
                magnam.</p>
        </div>
    </div>
    {{!fin de portadd}}

    <div id="novedades" class="row py-4">
        <div class="col-12 col-md-5 offset-md-2 col-lx-6 py-3">
            <h2>Novedades</h2>
            <ul class="lista-novedades">
                {{#each novedades}}
                <li><a href="javascript:void(0)" data-toggle="modal" data-target="#modal{{id}}"><img src="{{imagen}}"
                            width="120" /> {{titulo}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-sm-12 col-md-5 p-2 mt-5">
            <h3>Accesorios</h3>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/producto1 (2).jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/producto1 (2).jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/producto1 (2).jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        {{#each novedades}}
        <!-- Modal -->
        <div class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdrop">{{titulo}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h2>{{subtitulo}}</h2>
                        <img src="{{imagen}}" />
                        <p>{{cuerpo}}</p>
                    </div>

                </div>
            </div>

        </div>
        {{/each}}

    </div>

</div>


</div>