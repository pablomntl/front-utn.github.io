<section class="content">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6 px-4">
    <h2>Contactanos</h2>
    <form action="/" method="POST">
        <div class="form-row">
            <div class="form-group ">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
                <label for="apellido">Apellido</label>
                <input type="text" class="form-control" id="apellido" placeholder="Apellido" name="apellido">
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="ejemplo@email.com" name="email">
        </div>
        <div class="form-group ">
            <label for="tel">Tel</label>
            <input type="text" class="form-control" id="tel" placeholder="" name="tel">
        </div>
        <div class="form-group">
            <label for="mensaje">Mensaje</label>
            <textarea class="form-control" id="mensaje" rows="4" name="comentarios"></textarea>
        </div>
        <button type="button" class="btn btn-primary mt-2">Enviar</button>
</div>
</form>
{{message}}
</div>
</div>
</section>